<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SlidingMenu.TextView.Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SlidingMenu.TextView.SubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/dialog_text_hint</item>
    </style>

    <style name="SlidingMenu.TextView.ItemTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:paddingLeft">15.0dp</item>
        <item name="android:height">50.0dp</item>
        <item name="android:drawablePadding">15.0dp</item>
    </style>

    <style name="SlidingMenu.View.SplitLine" parent="@android:style/Widget">
        <item name="android:background">@drawable/sliding_menu_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>
